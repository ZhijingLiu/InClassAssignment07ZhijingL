<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jenniferliu.inclassassignment07_zhijingl.Main2Activity"
    tools:showIn="@layout/activity_main2">

    <EditText
        android:id="@+id/animal_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="animal"
        android:padding="16dp"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/legs_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numbers of legs"
        android:padding="16dp"
        android:textSize="20dp"
        />

    <CheckBox
        android:id="@+id/has_fur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Has Fur?"
        android:textSize="20dp"
        />

    <RadioGroup
        android:id="@+id/m_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        >

        <RadioButton
            android:id="@+id/mammal_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mammal"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/nonmammal_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nonmammal"
            android:textSize="20dp"/>


    </RadioGroup>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="submit"
        android:textSize="20dp"/>

</LinearLayout>
